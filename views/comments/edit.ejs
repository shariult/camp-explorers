<%- include('../partials/header'); %>
<section class="section-newcamp">
  <div class="form-wrapper">
    <h2 class="heading-2 mb-4">Update Comment</h2>
    <form
      action="/campgrounds/<%= campground %>/comments/<%= comment._id %>?_method=PUT"
      method="post"
      class="form"
    >
      <div class="form__box">
        <input
          type="text"
          name="comment"
          class="form__input section-comments__input"
          id="comment"
          placeholder="Update Review"
          value="<%= comment.comment %>"
          required
        />
      </div>
      <button class="btn btn--primary form__btn">Update</button>
    </form>
  </div>
</section>
<%- include('../partials/footer'); %>
